<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing">

        <TableLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="@dimen/item_top_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:background="@color/white">

            <TableRow android:layout_margin="@dimen/Main_button_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MFJUseID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />

                <Spinner
                    android:id="@+id/MFJUseID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />
            </TableRow>

            <TableRow android:layout_margin="@dimen/Main_button_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MFJUseYuJingDate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />

                <EditText
                    android:id="@+id/MFJUseYuJingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />
            </TableRow>

            <TableRow android:layout_margin="@dimen/Main_button_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MFJUseYuJingStatus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />

                <EditText
                    android:id="@+id/MFJUseYuJingStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />
            </TableRow>

            <TableRow android:layout_margin="@dimen/Main_button_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MFJUseYuJingDes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />

                <EditText
                    android:id="@+id/MFJUseYuJingDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_detail_text_size" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/add_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_info"
            android:layout_margin="@dimen/item_detail_button_size"
            android:background="@color/blue_500"
            android:textColor="@color/white"
            android:textSize="@dimen/item_detail_button_text_size"/>
        <Button
            android:id="@+id/close_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close_item"
            android:layout_margin="@dimen/item_detail_button_size"
            android:background="@color/blue_500"
            android:textColor="@color/white"
            android:textSize="@dimen/item_detail_button_text_size"/>
    </LinearLayout>
</LinearLayout>
