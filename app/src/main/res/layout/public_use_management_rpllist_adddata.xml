<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing">
        <TableLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_top_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:background="@color/white"
            android:layout_gravity="center_horizontal">

            <TableRow
                android:layout_margin="@dimen/Main_button_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PatrolRecordCodeID"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/BuildPlanningCodeID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"
                    android:spinnerMode="dropdown"/>
            </TableRow>
            <TableRow
                android:layout_margin="@dimen/Main_button_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PatrolRecordDate"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/MFJXuQiuate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow
                android:layout_margin="@dimen/Main_button_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PatrolRecordContent"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/MJFXuQiuCont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow
                android:layout_margin="@dimen/Main_button_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PatrolRecordPerson"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/MJFXuQiuUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_detail_text_size"
                    android:textColor="@color/black"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/add_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_info"
            android:layout_margin="@dimen/item_detail_button_size"
            android:background="@color/blue_500"
            android:textColor="@color/white"
            android:textSize="@dimen/item_detail_button_text_size"/>
        <Button
            android:id="@+id/close_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close_item"
            android:layout_margin="@dimen/item_detail_button_size"
            android:background="@color/blue_500"
            android:textColor="@color/white"
            android:textSize="@dimen/item_detail_button_text_size"/>
    </LinearLayout>
</LinearLayout>